---
const { overskrift, name, text } = Astro.props;
---

<li class="testimonial">
  <h2>{overskrift}</h2>
  <h3>{name}</h3>
  <p>{text}</p>
</li>

<style>
  .testimonial {
    display: block;
    height: 300px;
    width: 300px;
    background-color: var(--secondary);
    border-radius: 0px;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  h2 {
    color: var(--baggrund);
    font-family: Georgia, "Times New Roman", Times, serif;
  }
  h3 {
    color: var(--baggrund);
    font-family: Georgia, "Times New Roman", Times, serif;
  }
  p {
    color: var(--baggrund);
  }
</style>
