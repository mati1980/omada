---
const { name, text } = Astro.props;
import Right from "./Right.astro";
---

<li class="testimonial">
  <h1>â€œ</h1>
  <h2>{text}</h2>
  <p>{name}</p>
  <div class="box">
    <div class="arrow"></div>
  </div>
</li>

<style>
  .testimonial {
    margin: auto;
    display: block;
    height: 400px;
    width: 350px;
    background-color: #ff675b;
    border-radius: 0px;
    margin-top: 2rem;
    margin-bottom: 2rem;
    padding: 1rem;
    display: flex;
    flex-direction: column;
  }
  h1 {
    color: var(--baggrund);
    font-family: Georgia, "Times New Roman", Times, serif;
    font-size: var(--xxl);
  }
  h2 {
    color: var(--baggrund);
    font-family: Georgia, "Times New Roman", Times, serif;
    font-size: var(--s);
    font-weight: 400;
    font-style: italic;
    padding-left: 1rem;
    padding-bottom: 0.5rem;
  }
  p {
    color: var(--baggrund);
    font-size: var(--xxs);
    font-style: italic;
    align-self: flex-end;
    padding-right: 2rem;
  }

  .arrow {
    display: block;
    height: 3px;
    width: 100px;
    background-color: var(--baggrund);
    border-radius: 0px;
    position: relative;
  }

  .arrow:after {
    content: "";
    display: inline-block;
    width: 20px;
    height: 3px;
    background-color: var(--baggrund);
    transform: rotate(45deg);
    position: absolute;
    right: -5px;
    bottom: 6px;
  }
  .arrow:before {
    content: "";
    display: inline-block;
    width: 20px;
    height: 3px;
    background-color: var(--baggrund);
    transform: rotate(-45deg);
    position: absolute;
    right: -5px;
    bottom: -6px;
  }
  .box {
    display: block;
    border: solid var(--baggrund);
    padding: 1.5rem;
    margin: auto;
    margin-top: auto;
  }
</style>
